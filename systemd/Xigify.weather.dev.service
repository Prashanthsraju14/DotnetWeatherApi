[Unit]
Description=Xigify WeatherApi Service

[Service]
WorkingDirectory=/var/www/dev/weather
ExecStart=/usr/bin/dotnet /home/ubuntu/dotnet/DotnetWeatherApi/publish/WeatherApi.dll --urls http://0.0.0.0:5000
Restart=always
#Restart service after 10 seconds when crash
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=webapi
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=ASPNETCORE_URLS=http://*:7083

[Install]
WantedBy=multi-user.target
